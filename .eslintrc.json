{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base",
    "plugin:jest/recommended"
  ],
  "overrides": [
    {
      "files": [
        "**/*.test.js"
      ],
      "env": {
        "jest": true
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "max-len": "off",
    "linebreak-style": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "max-classes-per-file": "off",
    "class-methods-use-this": "off"
  }
}
